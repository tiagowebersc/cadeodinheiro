@using CadeODinheiro.Core.DTO;
@using System.Web.Mvc;
@using System.Text;
@functions {
    public static HtmlString MontaTabelaPrevisao(List<PrevisaoMesModel> lista)
    {
        string htmlRetorno = "";
        htmlRetorno += "<table class=\"table table-bordered table-hover col-lg-12\" style=\"font-size: smaller;\">";
        htmlRetorno += "    <thead>";
        htmlRetorno += "        <tr>";
        htmlRetorno += "            <th class=\"col-xs-1 text-align-center\" style=\"padding: 1px;\">Data</th>";
        htmlRetorno += "            <th class=\"col-xs-4 text-align-left\" style=\"padding: 1px;\">Descrição</th>";
        htmlRetorno += "            <th class=\"col-xs-2 text-align-left\" style=\"padding: 1px;\">Conta</th>";
        htmlRetorno += "            <th class=\"col-xs-2 text-align-left\" style=\"padding: 1px;\">Categoria</th>";
        htmlRetorno += "            <th class=\"col-xs-1 text-align-right\" style=\"padding: 1px;\">Valor</th>";
        htmlRetorno += "            <th class=\"col-xs-1 text-align-center\" style=\"padding: 1px;\">Pago</th>";
        htmlRetorno += "        </tr>";
        htmlRetorno += "    </thead>";
        htmlRetorno += "    <tbody>";
        foreach (CadeODinheiro.Core.DTO.PrevisaoMesModel pfm in lista)
        {
                    htmlRetorno += "<tr style=\"" + (pfm.bPago ? "background-color: mediumaquamarine;" : "background-color: lightpink;") + "\">";
                    htmlRetorno += "    <td align=\"center\" style=\"padding: 1px;\">";
                    htmlRetorno += @pfm.dData.ToString("dd/MM/yyyy");
                    htmlRetorno += "    </td>";
                    htmlRetorno += "    <td align=\"left\" style=\"padding: 1px;\">";
                    htmlRetorno += @pfm.sDescricao;
                    htmlRetorno += "    </td>";
                    htmlRetorno += "    <td align=\"left\" style=\"padding: 1px;\">";
                    htmlRetorno += @pfm.sDescConta;
                    htmlRetorno += "    </td>";
                    htmlRetorno += "    <td align=\"left\" style=\"padding: 1px;\">";
                    htmlRetorno += @pfm.sDescCategoria;
                    htmlRetorno += "    </td>";
                    htmlRetorno += "    <td align=\"right\" style=\"padding: 1px;\">";
                    htmlRetorno += @pfm.dValor.ToString("C");
                    htmlRetorno += "    </td>";
                    htmlRetorno += "    <td align=\"center\" style=\"padding: 1px;\">";
                    if (pfm.bPago)
                        htmlRetorno += "<strong>Sim</strong>";
                    else
                        htmlRetorno += "<strong>Não</strong>";
                    htmlRetorno += "   </td>";
                    htmlRetorno += "</tr>";
                }
        htmlRetorno += "    </tbody>";
        htmlRetorno += "</table>";
        return new HtmlString(htmlRetorno);
    }
}
