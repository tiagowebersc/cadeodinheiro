@model CadeODinheiro.Core.Entity.Category
@{
    ViewBag.Title = "Excluir";
    Layout = "~/Views/Shared/_ContentFormLayout.cshtml";
}

@section headerWidget{
    <h2>Categoria</h2>
    &nbsp;&nbsp;<i id="divLoading" style="display: none" class="fa fa-cog fa-2x fa-spin"></i>
}

@using (Ajax.BeginForm("Excluir", "Category", new AjaxOptions()
{
    HttpMethod = "Post",
    LoadingElementId = "divLoading",
    OnSuccess = "OnEndProccessMensagemComReload"
},
    new { @class = "smart-form" }))
{
    @Html.AntiForgeryToken()
    <header>
        <h1 class="txt-color-red login-header-medium">Exclusão da categoria</h1>
    </header>
    <fieldset>
        @Html.TextBoxFor(e => e.sID, new { @readonly = "readonly", style = "display: none;" })
        <div class="row">
            <section class="col col-10">
                <label class="label">@Html.LabelFor(e => e.descricao)</label>
                <label class="input">
                    @Html.TextBoxFor(e => e.descricao, new { @readonly = "readonly", style = "border: none;" })
                </label>
            </section>
        </div>
    </fieldset>
    <header>
        <h1 class="txt-color-red login-header-medium">Confirma exclusão desta categoria?</h1>
    </header>
    <fieldset>
        <div class="row">
            <section class="col col-6">
                <div align="right">
                    <button type="submit" class="btn btn-primary btn-lg" name="confirmaExclusao" value="T">
                        Sim
                    </button>
                </div>
            </section>
            <section class="col col-6">
                <div align="left">
                    <button type="submit" class="btn btn-primary btn-lg" name="confirmaExclusao" value="F">
                        Não
                    </button>
                </div>
            </section>
        </div>
    </fieldset>
}