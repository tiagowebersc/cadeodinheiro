<body class="smart-style-1 animated fadeInDown">
    <!-- video from youtube, change here your url -- >

    <div id="bgndVideo" class="player" data-poster="img/img1.jpg" data-property="{videoURL:'https://www.youtube.com/watch?v=jQfJhWc81Tw',containment:'body', autoPlay:true, showControls:false, startAt:1, opacity:0.4}"></div>
    <div id="bg-video-controls">
        <a id="bg-video-volume" class="icon exit-mute" href="#" title="MUDO">&nbsp;</a>
        <a id="bg-video-play" class="icon exit-pause" href="#" title="PARAR">&nbsp;</a>
    </div>

    <!-- end video from youtube -->
    <header id="header_login">
        <div id="logo-group">
            <span id="logo_login"><img id="img_login" alt="CadeODinheiro" src="~/Content/img/dinheiro.png" /></span>
        </div>
    </header>

    <div id="main" role="main">

        <!-- MAIN CONTENT -->
        <div id="content" class="container">
            @using (Ajax.BeginForm("Index", "NewAccount", new AjaxOptions()
            {
                HttpMethod = "Post",
                LoadingElementId = "divLoading",
                OnSuccess = "OnEndProccessMensagemComRedirecionamento"
            },
                new { @class = "smart-form" }))
            {
                @Html.AntiForgeryToken()
                <header>
                    Nova Conta
                </header>
                <fieldset>
                    <section>
                        <div style="color:red;">
                            @Html.ValidationSummary()
                        </div>
                    </section>
                    <div class="row">
                        <section class="col col-4">
                            <label class="label">@Html.LabelFor(e => e.login)</label>
                            <label class="input">
                                @Html.EditorFor(e => e.login)
                            </label>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-12">
                            <label class="label">@Html.LabelFor(e => e.nome)</label>
                            <label class="input">
                                @Html.EditorFor(e => e.nome)
                            </label>
                        </section>
                    </div>
                </fieldset>
                <header>
                    Senha
                </header>
                <fieldset>
                    <div class="row">
                        <section class="col col-4">
                            <label class="label">@Html.LabelFor(e => e.senha)</label>
                            <label class="input">
                                @Html.EditorFor(e => e.senha)
                            </label>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col col-4">
                            <label class="label">@Html.LabelFor(e => e.confirmarSenha)</label>
                            <label class="input">
                                @Html.EditorFor(e => e.confirmarSenha)
                            </label>
                        </section>
                    </div>
                </fieldset>
                <footer>
                    <button type="submit" class="btn btn-primary" value="CriarConta">
                        Criar Conta
                    </button>
                </footer>
            }
        </div>

    </div>

    <!--================================================== -->
    <!-- PACE LOADER - turn this on if you want ajax loading to show (caution: uses lots of memory on iDevices)-->
    @Scripts.Render("~/bundles/pace")
    <!--<script src="js/plugin/pace/pace.min.js"></script>-->
    <!-- Link to Google CDN's jQuery + jQueryUI; fall back to local -->
    <!--<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script> if (!window.jQuery) { document.write('<script src="js/libs/jquery-2.0.2.min.js"><\/script>'); } </script>

    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script> if (!window.jQuery.ui) { document.write('<script src="js/libs/jquery-ui-1.10.3.min.js"><\/script>'); } </script>-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    <!-- JS TOUCH : include this plugin for mobile drag / drop touch events
    <script src="js/plugin/jquery-touch/jquery.ui.touch-punch.min.js"></script> -->
    <!-- BOOTSTRAP JS -->
    @Scripts.Render("~/bundles/bootstrap")
    <!--<script src="js/bootstrap/bootstrap.min.js"></script>-->
    <!-- JQUERY VALIDATE -->
    @Scripts.Render("~/bundles/jqueryval")
    <!--<script src="js/plugin/jquery-validate/jquery.validate.min.js"></script>-->
    <!-- JQUERY MASKED INPUT -->
    @Scripts.Render("~/bundles/jquerymask")
    <!--<script src="js/plugin/masked-input/jquery.maskedinput.min.js"></script>-->
    <!--[if IE 8]>

        <h1>Your browser is out of date, please update your browser by going to www.microsoft.com/download</h1>

    <![endif]-->
    <!-- MAIN APP JS FILE -->
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/custom")

    <!-- CUSTOM NOTIFICATION -->
    <script src="~/Scripts/smartadmin/notification/SmartNotification.min.js"></script>
    <!-- MAIN APP JS FILE -->
    <script src="~/Scripts/smartadmin/app.js"></script>


</body>
</html>